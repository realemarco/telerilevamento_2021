\maketitle
\endtitle

\section{Introduzione}
\begin{frame}

 \begin{itemize}
 \item  I roghi del 1988 rappresentano collettivamente il più grande incendio nella storia del Parco
  \item Quasi 250 incendi tra Giugno e Agosto 1988
  \item Forse responsabilità su tardivo aggiornamento della strategia di prevenzione degli incendi
  \item  Il 36\% del parco è stato colpito dagli incendi: un totale di 3.213 km^2
 \end{itemize}
 
 \frametitle{Introduzione}
\begin{figure}
\centering
{\includegraphics[width=0.4\textwidth]{yellowstone.jpg}}
{\includegraphics[width=0.4\textwidth]{incendio.jpg}}
\end{figure}
% see here for additional text size!: https://it.overleaf.com/learn/latex/Font_sizes,_families,_and_styles
\end{frame}



\section{Dati}
\begin{frame}
 \frametitle{Dati}
 \begin{itemize}
  \item Fonte: NASA Earth Observatory
  \item Immagini ottenute da Landsat 5 e 8 (bande GREEN,NIR,SWIR)
  \item 8 immagini con intervalli di 5 anni: 1987, 1989, 1994, 1999, 2004, 2009, 2014, 2019
 \end{itemize} 
 
 \begin{figure}
 {\includegraphics[width=0.67\textwidth]{rgblin.jpeg}}
 
\end{figure}
\end{frame}
 
